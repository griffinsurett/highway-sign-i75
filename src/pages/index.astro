---
import BaseLayout from "../layouts/BaseLayout.astro";
import BaseHeader from "@/components/BaseHeader.astro";
import HeroSection from "@/sections/HeroSection.astro";
import AboutSection from "@/sections/AboutSection.astro";
import PartsLoop from "@/components/PartsLoop.astro";
import ComparisonSection from "@/sections/ComparisonSection.astro";
import FeaturesSection from "@/sections/FeaturesSection.astro";
import FooterSection from "@/sections/FooterSection.astro";
import AchievementsSection from "@/sections/AchievementsSection.astro";
import TestimonialSection from "@/sections/TestimonialSection.astro";
import PartnersSection from "@/sections/PartnersSection.astro";
import CourseOfferingsSection from "@/sections/CourseOfferingsSection.astro";
import ContentWrapper from "@/components/ContentWrapper.astro";
import WhyChooseUs from "@/sections/WhyChooseUs.astro";
import RecentPassersSection from "@/sections/RecentPassersSection.astro";
import Poll from "@/assets/poll.jpg";
import BgImage from "@/assets/i75road.jpg";
import { Image } from "astro:assets";

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<BaseLayout
  title="Get on the right road!"
  description="Welcome to i75 CPA Review, your trusted partner in CPA exam preparation."
>
  <!-- <ContentWrapper> -->
  <BaseHeader />
  <HeroSection />
  <div class="border-3 border-light-primary pt-10 lg:pt-18">
    <AboutSection />
    <ComparisonSection />
  </div>
  <div
    class="relative bg-cover bg-center bg-fixed outer-section"
    style={`background-image: url("${BgImage.src}");`}
  >
  	<WhyChooseUs />
      <FeaturesSection />
    <TestimonialSection />
    <Image
      src={Poll}
      alt="i75 road background"
      class="inner-section-sm h-full object-cover mt-10"
      loading="lazy"
    />
    <!-- <AchievementsSection /> -->
  </div>
  <div class="border-3 border-light-primary pt-10 lg:pt-18">
    <PartnersSection />
  </div>
  <FooterSection />
  <!-- </ContentWrapper> -->
</BaseLayout>
