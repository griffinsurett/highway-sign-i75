---
// src/components/StatCard.astro
import Heading from "@/components/Heading";
import HighwayCard from "./HighwayCard.astro";

const {
  stat,
  label,
  description = "",
  class: className = "",
  statClass = "font-black",
  labelClass = "text-dark-primary font-bold",
  descriptionClass = "text-dark-secondary",
} = Astro.props;
---

  <!-- Decorative background element -->
  
  
  <div class="relative z-10">
    <!-- Main Statistic -->
    <div class="mb-6">
      <Heading 
        tagName="div" 
        className={`text-light-primary text-6xl md:text-7xl lg:text-8xl leading-none tracking-tight ${statClass}`}
      >
        {stat}
      </Heading>
    </div>
    
    <!-- Label -->
    <div class="mb-4">
      <Heading 
        tagName="h3" 
        className={`text-xl md:text-2xl leading-tight text-light-primary ${labelClass}`}
      >
        {label}
      </Heading>
    </div>
    
    <!-- Optional Description -->
    {description && (
      <p class={`text-base md:text-lg leading-relaxed text-light-secondary ${descriptionClass}`}>
        {description}
      </p>
    )}
  </div>

  <!-- Hover glow effect -->
  <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-primary/20 via-transparent to-primary/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
