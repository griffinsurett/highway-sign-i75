---
// src/sections/FeaturesSection.astro
import Heading from "@/components/Heading";
import CTABlock from "@/components/CTABlock.astro";
import ArrowHeading from "@/components/ArrowHeading.astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Passer from "@/assets/passer.png";

// Import feature images - you'll need to add these to your assets folder
import MultipleChoiceImg from "@/assets/features/multiple-choice.jpg"; // Replace with actual images
import PremiumVideosImg from "@/assets/features/premium-videos.jpg";
import SimulationsImg from "@/assets/features/simulations.jpg";
import FinalReviewImg from "@/assets/features/final-review.jpg";
import EbookImg from "@/assets/features/ebook.jpg";

const {
  id = "features",
  class: className = "",
  title = "WHAT'S INCLUDED IN YOUR i75 COURSE",
  ctaText = "GET FULL ACCESS NOW",
  ctaHref = "/enroll",
} = Astro.props;

const courseFeatures = [
  {
    title: "Multiple Choice Tests",
    description:
      "A Multiple Choice Test at the end of every video (or two) and a Cumulative Multiple Choice Test at the end of every chapter.",
    image: Passer,
    imageAlt: "Multiple choice test interface showing practice questions",
  },
  {
    title: "Premium Videos",
    description:
      "i75 videos simplify learning, helping you really get the concepts without having to memorize them. Breaking down tough topics to make them easy to understand. Say Goodbye to boring lectures!",
    image: Passer,
    imageAlt: "Darius Clark teaching in a premium video lesson",
  },
  {
    title: "Instructor-Led Simulations",
    description:
      "All i75 Simulations are Instructor Narrated Videos for Maximum learning purposes",
    image: Passer,
    imageAlt: "Interactive simulation exercise on computer screen",
  },
  {
    title: "Final Review",
    description:
      "The Final Review chapter includes narrated simulation videos and randomized testlets to enhance your understanding, and focus on areas needing improvement.",
    image: Passer,
    imageAlt: "Final review materials and study guide",
  },
  {
    title: "Amazon E-book",
    description:
      'The Amazon E-book Contains 75 "must know" questions for your exam',
    image: Passer,
    imageAlt: "i75 CPA Review Amazon e-book cover",
  },
];
---
<section id={id} class={`outer-section ${className}`}>
  <div class="inner-section-sm mx-auto flex flex-col items-center justify-center">
    <!-- Section Header -->
    <div class="text-center space-y-4 mb-8">
      <ArrowHeading
        tagName="h2"
        variant="secondary"
        className="h3 font-bold text-light-primary tracking-wide"
        containerClass="flex items-center justify-center mb-6"
      >
        {title}
      </ArrowHeading>
    </div>

    <!-- Features List -->
    <ol class="space-y-20 md:space-y-24">
      {courseFeatures.map((feature, index) => {
        const isEven = index % 2 === 0;
        const imageOrder = isEven ? "order-1 lg:order-1" : "order-1 lg:order-2";
        const contentOrder = isEven ? "order-2 lg:order-2" : "order-2 lg:order-1";
        
        return (
          <li class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
            <div class={`${imageOrder} relative group`}>
              <div class="relative overflow-hidden rounded-3xl shadow-2xl ring-1 ring-white/10">
                <Image
                  src={feature.image}
                  alt={feature.imageAlt}
                  class="w-full h-80 md:h-96 object-cover transition-transform duration-500 group-hover:scale-105"
                  loading="lazy"
                />
              </div>
            </div>

            <div class={`${contentOrder} space-y-6 h-full`}>
              <div class="space-y-4 lg:sticky lg:top-0 flex flex-col gap-4">
                <Heading 
                  tagName="span" 
                  className="h3 font-bold text-light-primary uppercase tracking-wide"
                >
                  {feature.title}
                </Heading>
                <p class="text-lg md:text-xl text-light-primary/90 leading-relaxed">
                  {feature.description}
                </p>
              </div>
              
              {/* <div class="inline-flex items-center gap-2 px-4 py-2 bg-light-primary/10 backdrop-blur-sm rounded-full border border-light-primary/20">
                <span class="text-light-primary font-medium text-sm uppercase tracking-wide">
                  Included in Course
                </span>
              </div> */}
            </div>
          </li>
        );
      })}
    </ol>

    <!-- Call to Action -->
       <!-- Call to Action -->
        <CTABlock
          containerClass="text-left flex flex-col justify-start items-start mt-10"
          showSecondaryButton={false}
          showSignature={false}
        />
  </div>
</section>