---
import BgImage from "@/assets/i75road.jpg";
import Button from "@/components/Button/Button";
import Heading from "@/components/Heading";
import PartsLoop from "@/components/PartsLoop.astro";
---

<section class="relative overflow-visible bg-light-primary">
  <!-- Hero -->
  <div
    class="relative bg-cover bg-center lg:bg-fixed min-h-[70vh] md:min-h-[80vh] xl:min-h-[100vh]
           flex flex-col items-center justify-center xl:justify-between space-y-4 gap-6"
    style={`background-image: url("${BgImage.src}");`}
  >
    <div class="absolute inset-0 bg-dark-primary/35"></div>

    <div
      class="relative w-8/10 z-10 text-center flex justify-center items-center flex-col py-4 md:py-9 lg:py-12 xl:py-18 m-0"
    >
      <Heading className="text-light-primary drop-shadow-xl h1" before="Welcome To " beforeClass="beforeAndAfterHeadingClass" text="i75!" after=" The Right Road to Passing the CPA Exam!" afterClass="beforeAndAfterHeadingClass" />
      <p class="text-light-primary/90 text-lg md:text-xl max-w-5xl">
        Get On i75 with Darius Clark, because The Right Teacher Makes All The
        Difference!
      </p>

      <div class="pt-6 md:pt-8 flex justify-center flex-wrap gap-4 md:gap-6">
        <Button variant="primary" className="h4" href="#quote"
          >Get it Now</Button
        >
      </div>
    </div>

    <PartsLoop
      class="left-1/2 bottom-0 z-50 flex justify-center items-center -mb-[120px]"
    />
  </div>
</section>
